<h1><%= t "products.edit.edit_book" %></h1>
<%= form_for [:admin, @product] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :category, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :category_id, @categories, {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :productname, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :productname, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :discount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :discount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :onhand, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :onhand, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :productcontent, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :productcontent, size: Settings.size %>
    </div>
   </div>
  <div class="form-group">
    <%= f.label :status, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :status, options_for_select(Product.statuses.keys), {},
        {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit t("products.edit.sub"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
