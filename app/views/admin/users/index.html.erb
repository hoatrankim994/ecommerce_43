<h1><%= t "admin.users.index.list_user" %></h1>
<div class="row">
  <section class="panel">
    <div class="col-md-6">
      <div class="nav search-row" id="top_menu">
        <%= form_tag admin_users_path, method: :get do %>
          <%= text_field_tag :search, params[:search], class: "form-control sinput",
            placeholder: t("layouts.admin.keyword") %>
          <%= button_tag type: "submit", class: "btn btn-default", name: nil do %>
            <%= content_tag :i, "", class: "fa fa-search" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <%= will_paginate @product %>
    </div>
    <table class="table table-striped table-responsive-md btn-table">
      <thead>
        <tr>
          <th><%= t ".id" %></th>
          <th><%= t ".name" %></th>
          <th><%= t ".email" %></th>
          <th><%= t ".gender" %></th>
          <th><%= t ".address" %></th>
          <th><%= t ".phone" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% if @users && @users.any? %>
          <%= render @users %>
        <% else %>
          <% flash[:danger] = t ".not_found_users" %>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @users %>
  </section>
</div>
