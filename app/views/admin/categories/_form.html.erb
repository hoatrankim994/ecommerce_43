<%= form_for [:admin, @category] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :category %>
  <%= f.collection_select :parent_id, @categories, :id, :long_name, {include_blank: t("admin.categories.edit.parent")}, {class: "form-control"} %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :catcontent %>
  <%= f.text_area(:catcontent, size: "#{Settings.size.col}x#{Settings.size.row}") %>
  <%= f.label :status %>
  <%= f.select :status, options_for_select(Category.statuses.keys, @category.status), {}, {class: "form-control"} %>
  <%= f.submit t("products.edit.sub"), class: "btn btn-primary" %>
<% end %>
