<div class="btn-group btn-group-justified">
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= @cart[item.id.to_s] %></button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= item.productname %></button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= item.price %></button>
  </div>
  <div class="btn-group">
    <button type="submit" class="btn btn-default"><%= link_to t("controller.carts.plus"), plus_product_path(key: item.id), method: :get%></button>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-default"><%= link_to t("controller.carts.minus"), minus_product_path(key: item.id), method: :get%></button>
  </div>
</div>
