<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts.header.book"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts.header.home"), root_path %></li>
        <li><%= link_to t("layouts.header.help"), help_path %></li>
        <li class="dropdown">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: :dropdown} do %><%= t("layouts.header.category") %><b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu" role="menu">
            <% Category.all.each do |category| %>
              <li class="<%= "active" if params[:category] == category.title %>" ><%= link_to category.title, products_path(category: category.title), class: "link" %></li>
            <% end %>
          </ul>
        </li>
        <% if logged_in? %>
          <li><%= link_to t("layouts.header.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: :dropdown} do %><%= t("layouts.header.account") %><b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.profile"), current_user %></li>
              <li><%= link_to t("layouts.header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts.header.log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li class="dropdown">
              <%= link_to "#", class: "dropdown-toggle", data: {toggle: :dropdown} do %><%= t "layouts.header.admin" %><b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu">
                <li><%= link_to t("layouts.header.list_order"), admin_orders_path %></li>
                <li><%= link_to t("layouts.header.list_product"), admin_products_path %></li>
                <li><%= link_to t("layouts.header.add_book"), new_admin_product_path %></li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("layouts.header.log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
