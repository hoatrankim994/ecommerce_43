<% provide:title, t("password_reset.edit.re_pass") %>
<h1><%= t "password_reset.edit.re_pass" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages" %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label t("form.password_label") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label t("form.password_confirmation_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("password_reset.edit.up_pass"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
